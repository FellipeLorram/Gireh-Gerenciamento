
<% if (errors.length > 0) { %>
  <div class="row">
    <div class="col my-3">
      <div class="alert text-center alert-danger">
        <% errors.forEach(erro => { %>
        <%= erro %><br>
        <% }); %>
      </div>
    </div>
  </div>
  <% } %>
  
  <% if (success.length > 0) { %>
  <div class="row">
    <div class="col my-2">
      <div class="alert text-center alert-success">
        <% success.forEach(success => { %>
        <%= success %><br>
        <% }); %>
      </div>
    </div>
  </div>
  <% } %>