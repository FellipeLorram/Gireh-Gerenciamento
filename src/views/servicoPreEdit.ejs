                  <%= servico.nome %>
                </td>


                <% if(servico.endereço=='' ){ %>
                  <td data-label="Endereço"> Não Preenchido </td>
                  <% }else{ %>
                    <td data-label="Endereço">
                      <%= servico.endereço %>
                    </td>
                    <% } %>

                      <% if(servico.telefone=='' ){ %>
                        <td data-label="Telefone"> Não Preenchido </td>
                        <% }else{ %>
                          <td data-label="Telefone">
                            <%= servico.telefone %>
                          </td>
                          <% } %>


            </tbody>
          </table>

          <table class="table3">
            <thead class="thead">
              <tr>
                <th></th>
                <th>Esf</th>
                <th>Cil</th>
                <th>Eixo</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  OD
                </td>
                <td class="tdDonteudo">
                  <%= servico.esfOd %>
