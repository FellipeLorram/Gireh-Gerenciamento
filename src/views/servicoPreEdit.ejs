              </tr>
              <tr>
                <td>
                  OE
                </td>
                <td class="tdDonteudo">
                  <%= servico.esfOe %>
                </td > 
                <td class="tdDonteudo">
                  <%= servico.cilOe %>
                </td>
                <td class="tdDonteudo">
                  <%= servico.eixoOe %>
                </td>
              </tr>
              <tr>
                <td>
                  ADD
                </td>
                <td></td>
                <td class="tdDonteudo">
                  <%= servico.adicao %>
                </td>
                <td></td>
              </tr>
            </tbody>
          </table>

          <table class="table3">
            <thead class="thead">
              <tr>
                <th></th>
                <th>DNP</th>
                <th>ALT</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  OD
                </td>
                <td class="tdDonteudo">
                  <%= servico.dnpOd %>
                </td>
                <td class="tdDonteudo">
                  <%= servico.alturaOd %>
                </td>
              </tr>
              <tr>
                <td>
                  OE
                </td>
                <td class="tdDonteudo">
                  <%= servico.dnpOe %>
                </td>
                <td class="tdDonteudo">
                  <%= servico.alturaOe %>
                </td>
              </tr>
            </tbody>
          </table>

          <table class="table2">
            <tbody>
              <% if(servico.armacao=='' ){ %>
                <td data-label="Armação"> Não Preenchido </td>
                <% }else{ %>
                  <td data-label="Armação">
                    <%=servico.armacao%>
                  </td>
                  <% } %>

                    <% if(servico.valorArm=='' ){ %>
                      <td data-label="Valor"> Não Preenchido </td>
                      <% }else{ %>
                        <td data-label="Valor">
                          <%=servico.valorArm%>
                        </td>
                        <% } %>

            </tbody>
          </table>

          <table class="table2">
            <tbody>
