    <section class="espacamento"></section>

    <div class="container">
        <div class="row">
            <div class="col-lg-2"></div>

            <div class="col-lg-8 my-3">
                <h1 class="text-center mb-5">Novo Concerto</h1>

                <%- include('includes/messages') %>

                    <%if(concerto._id){%>
                        <form class="my-5 lbB" action="/concerto/edit/<%= concerto._id%>" method="POST">
                            <%}else {%>
                                <form action="/concerto/register" method="post">
                                    <%}%>

                                        <div class="row g-3 mb-3">
                                            <div class="col">
                                                <label for="nome" class="form-label">Nome</label>
                                                <input value="<%= concerto.nome%>" required type="text"
                                                    class="form-control" name="nome">
                                            </div>
                                            <div class="col">
                                                <label for="telefone" class="form-label">Telefone</label>
                                                <input value="<%= concerto.telefone%>" type="text" class="form-control"
                                                    name="telefone">
                                            </div>
                                        </div>

                                        <div class="row g-3 mb-3">
                                            <div class="col">
                                                <label for="tipo" class="form-label">Concerto</label>
                                                <select name="tipo" required value="<%=concerto.tipo %>"
                                                    id="tipoConcerto" class="form-select">
                                                    <option selected>
                                                        <%=concerto.tipo %>
                                                    </option>
                                                    <option>Solda</option>
                                                    <option>Mola</option>
                                                    <option>Parafuso</option>
                                                    <option>Plaqueta</option>
                                                    <option>Passagem</option>
                                                </select>
                                            </div>
                                            <div class="col">
                                                <label for="valor" class="form-label">Valor</label>
                                                <input value="<%= concerto.valor%>" type="text" class="form-control"
                                                    name="valor">
                                            </div>
                                        </div>

                                        <div class="row g-3 mb-3">
                                            <div class="col">
                                                <label for="pago" class="form-label">Pago</label>
                                                <select name="pago" value="<%=concerto.pago %>" class="form-select">
                                                    <option selected>
                                                        <%=concerto.pago %>
                                                    </option>
                                                    <option>Não pago</option>
                                                    <option>Pago</option>
                                                </select>
                                            </div>
                                            <div class="col">
                                                <label for="entregue" class="form-label">Entregue</label>
                                                <select name="entregue" value="<%= concerto.entregue %>"
                                                    class="form-select">
                                                    <option selected><%= concerto.entregue %></option>
                                                    <option >Não Entregue</option>
                                                    <option>Entregue</option>
                                                </select>
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-primary mt-4">Finalizar</button>

                                </form>

            </div>

            <div class="col-lg-2"></div>
        </div>
    </div>



