      <div class="col-lg-8 my-3">
        <h1 class="text-center">Ficha Optométrica</h1>

        <%- include('includes/messages') %>
          <%if(ficha._id){%>
            <form class="my-5 lbB form-ficha" action="/fichas/edit/<%= ficha._id%>" method="POST">
              <%}else {%>
                <form class="my-5 form-ficha" action="/fichas/register" method="POST">
                  <%}%>

                    <div class="mb-3">
                      <label for="nome" class="form-label">Nome</label>
                      <input value="<%= ficha.nome %>" required type="text" class="form-control" name="nome">
                    </div>

                    <div class="row g-3 mb-5">
                      <div class="col-md-6">
                        <label for="endereço" class="form-label">Endereço</label>
                        <input value="<%= ficha.endereço%>" type="text" class="form-control" name="endereço">
                      </div>
                      <div class="col-md-4">
                        <label for="telefone" class="form-label">Telefone</label>
                        <input value="<%= ficha.telefone%>" type="tel" class="form-control" name="telefone">
                      </div>
                      <div class="col-md-2">
                        <label for="idade" class="form-label">Idade</label>
                        <input value="<%= ficha.idade %>" type="text" class="form-control" name="idade">
                      </div>
                    </div>


                    <div class="mb-3">
                      <label for="anaminese" class="form-label">Anaminese</label>
                      <input value="<%= ficha.anaminese%>" type="tel" class="form-control" name="anaminese">
                    </div>


                    <h2 class="text-left my-5 mb-3">Oftalmoscopia</h2>
                    <div class="mb-3">
                      <label for="oftOd" class="form-label">Olho direito</label>
                      <input value="<%= ficha.oftOd%>" type="tel" class="form-control" name="oftOd">
                    </div>
                    <div class="mb-3">
                      <label for="oftOe" class="form-label">Olho esquerdo</label>
                      <input value="<%= ficha.oftOe%>" type="tel" class="form-control" name="oftOe">
                    </div>

                    <h2 class="text-left my-5 mb-3">Tonometria</h2>
                    <div class="mb-3">
                      <label for="tonoOd" class="form-label">Olho direito</label>
                      <input value="<%= ficha.tonoOd%>" type="tel" class="form-control" name="tonoOd">
                    </div>
                    <div class="mb-3">
                      <label for="tonoOe" class="form-label">Olho esquerdo</label>
                      <input value="<%= ficha.tonoOe%>" type="tel" class="form-control" name="tonoOe">
                    </div>

                    <h2 class="text-left my-5 mb-3">Motilidade ocular</h2>
                    <div class="mb-3">
                      <input value="<%= ficha.motilidade%>" type="tel" class="form-control" name="motilidade">
                    </div>
                    <div class="mb-3">
                      <label for="PPC" class="form-label">PPC</label>
                      <input value="<%= ficha.PPA %>" type="tel" class="form-control" name="PPC">
                    </div>
                    <div class="mb-3">
                      <label for="PPA" class="form-label">PPA</label>
                      <input value="<%= ficha.PPA%>" type="tel" class="form-control" name="PPA">
                    </div>

                    <h2 class="text-left my-5 mb-3">Lensometria</h2>
                    <p class="text-left lead mb-2 lbB">Olho direito</p>

                    <div class="row g-3 mb-5">
                      <div class="col">
                        <label for="LsesfOd" class="form-label">Esférico</label>
                        <input value="<%= ficha.LsEsfOd%>" type="text" class="form-control" name="LsEsfOd">
                      </div>
                      <div class="col">
                        <label for="LscilOd" class="form-label">Cilindrico</label>
                        <input value="<%= ficha.LsCilOd%>" type="text" class="form-control" name="LsCilOd">
                      </div>
                      <div class="col">
                        <label for="LseixoOd" class="form-label">Eixo</label>
                        <input value="<%= ficha.LsEixoOd%>" type="text" class="form-control" name="LsEixoOd">
                      </div>

                      <div class="col">
                        <label for="LsaddOd" class="form-label">Adição</label>
                        <input value="<%= ficha.LsAddOd%>" type="text" class="form-control" name="LsAddOd">
                      </div>
                    </div>

                    <p class="text-left lead mt-5 mb-2 my-3 lbB">Olho Esquerdo</p>

                    <div class="row g-3 mb-5">
                      <div class="col">
                        <label for="LsEsfOe" class="form-label">Esférico</label>
                        <input value="<%= ficha.LsEsfOe%>" type="text" class="form-control" name="LsEsfOe">
                      </div>
                      <div class="col">
                        <label for="LsCilOe" class="form-label">Cilindrico</label>
                        <input value="<%= ficha.LsCilOe%>" type="text" class="form-control" name="LsCilOe">
                      </div>
                      <div class="col">
                        <label for="LseixoOe" class="form-label">Eixo</label>
                        <input value="<%= ficha.LsEixoOe%>" type="text" class="form-control" name="LsEixoOe">
                      </div>
                      <div class="col">
                        <label for="LsaddOe" class="form-label">Adição</label>
                        <input value="<%= ficha.LsAddOe%>" type="text" class="form-control" name="LsAddOe">
                      </div>
                    </div>

                    <h2 class="text-left my-5 mb-3">RX Final</h2>
                    <p class="text-left lead mb-2 lbB">Olho direito</p>

                    <div class="row g-3 mb-5">
                      <div class="col">
                        <label for="rxEsfOd" class="form-label">Esférico</label>
                        <input value="<%= ficha.rxEsfOd%>" type="text" class="form-control" name="rxEsfOd">
                      </div>
                      <div class="col">
                        <label for="rxCilOd" class="form-label">Cilindrico</label>
                        <input value="<%= ficha.rxCilOd%>" type="text" class="form-control" name="rxCilOd">
                      </div>
                      <div class="col">
                        <label for="rxEixoOd" class="form-label">Eixo</label>
                        <input value="<%= ficha.rxEixoOd%>" type="text" class="form-control" name="rxEixoOd">
                      </div>

                      <div class="col">
                        <label for="rxAddOd" class="form-label">Adição</label>
                        <input value="<%= ficha.rxAddOd%>" type="text" class="form-control" name="rxAddOd">
                      </div>
                    </div>

                    <p class="text-left lead mt-5 mb-2 my-3 lbB">Olho Esquerdo</p>

                    <div class="row g-3 mb-5">
                      <div class="col">
                        <label for="rxEsfOe" class="form-label">Esférico</label>
                        <input value="<%= ficha.rxEsfOe%>" type="text" class="form-control" name="rxEsfOe">
                      </div>
                      <div class="col">
                        <label for="rxCilOe" class="form-label">Cilindrico</label>
                        <input value="<%= ficha.rxCilOe%>" type="text" class="form-control" name="rxCilOe">
